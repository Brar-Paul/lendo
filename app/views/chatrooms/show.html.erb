<body id="chatroom">
  <div class="con-small">
    <h1><%= @chatroom.name %></h1>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>" data-user-id = '<%= current_user.id %>'>
      <div class="container-messages">
        <% @chatroom.messages.each do |message| %>
          <div class="<%= message.user == current_user ? 'author' : 'receiver' %>" id="message-<%= message.id %>">
            <i>
              <span><%= message.user.email %></span>
              <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p><%= message.content %></p>
          </div>
        <% end %>
      </div>
    </div>

    <hr>
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Send a message" %>
    <% end %>
  </div>
</body>
