<div class="container mt-4">
  <div class="row favourites-row">
    <% @favourites.each do |favourite| %>
      <%= link_to product_path(favourite.product, class: "card-link") do %>
        <div class="col-lg-4 col-sm-6">
          <div class="product-card">
            <!-- Image -->
            <div class="image image-small">
              <%= cl_image_tag favourite.product.photos[0].key, height: 180, width: 255, crop: :fill %>
            </div>
            <!-- card-description -->
              <div class="product-card-description">
                <h3><%= favourite.product.title.truncate(25) %></h3>
                <p> <%= favourite.product.description.truncate(70) %> </p>
                <h4><span class="product-card-price">â‚¬ <%= favourite.product.price %></span> per Month</h4>
              </div>
              <div class="product-card-buttons">
                <%= link_to "Remove", favourite_path(favourite), method: :delete, class: "form-control secondary-button-unactive " %>
              </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
