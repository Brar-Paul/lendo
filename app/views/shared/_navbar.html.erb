<div class="navbar navbar-expand-sm navbar-light navbar-lendo transparent">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png", class: "navbar-image" %>
    <% end %>

  <div class="row justify-content-center bg-blue">
    <%= render 'shared/searchform' %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    <span class="fas fa-question-circle"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="dropdown mr-3 pt-2">
          <i class="fas fa-bars" type="button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right dropdown-card" aria-labelledby="navbarDropdown">
              <%= link_to "Dashboard", "dashboard", class: "dropdown-item" %>
              <%= link_to "Bookings", "bookings", class: "dropdown-item" %>
              <%= link_to "Favourites", "favourites", class: "dropdown-item" %>
              <%= link_to "Notifications", "notifications", class: "dropdown-item" %>
              <%= link_to "Messages", "messages", class: "dropdown-item" %>
              <%= link_to "Rent your products", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
         <li>
          <%= image_tag "avatar.png", class: "avatar" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "other-button-unactive" %>
        </li>
        <li class="nav-item">
          <%= link_to "Register", href="/users/sign_up", class: "secondary-button-unactive" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
