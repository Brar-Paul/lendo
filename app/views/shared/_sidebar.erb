<div style="display: inline" >
  <%= form_tag products_path, :method => 'get' do |f| %>
  <div style="display: inline" >
    <%#= text_field_tag :delivery_method, params[:delivery_method] %>
    <p class="sidebar-headers"><i class="fas fa-shopping-bag"></i> Price</p>
    <div class="price" style="display: inline">
      <%#= text_field_tag :price_min, params[:price_min], placeholder: "1 €" %>
    </div>

    <div class="price" style="display: inline">
      <%#= text_field_tag :price_max, params[:price_max], placeholder: "150 €" %>
    </div>

    <div style="display: inline">
      <%= collection_check_boxes(:product, :brand, Product.all, :brand, :brand) %>
      <%#= text_field_tag :brand, params[brand], placeholder: "Apple" %>
    </div>

    <div style="display: inline">
      <%#= f.check_box(:condition, { :multiple => true}) %>
    </div>

    <div style="display: inline">
      <%#= text_field_tag :delivery_method, params[:delivery_method], placeholder: "Flexible" %>
    </div>

  </div>
  <div style="display: inline">
    <%= submit_tag "Search", class: "primary-button"%>
  </div>
  <% end %>
</div>

