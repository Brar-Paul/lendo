<div class="container">
  <%= simple_form_for(@product) do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :category, :collection => @categories %>
      <%= f.input :price, placeholder: 'Price per day' %>
      <%= f.input :accessories, placeholder: 'Seperated with commas, e.g. "Tripod, Macro lens, Remote"' %>
      <%= f.input :condition, :collection => @condition %>
      <%= f.input :brand %>
      <%= f.input :model %>
      <%= f.input :delivery_method, :collection => ['Pick up', 'Delivery', 'Flexible'] %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      <%= f.submit class: "btn btn-primary" %>
  <% end %>

  <!-- Below is just testing out bootstrap tabs for dashboard, can be deleted.  -->

  <div class="container mb-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Bookings</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Requests</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">My Products</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="form-tab" data-toggle="tab" href="#form" role="tab" aria-controls="form" aria-selected="false">Form</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">Bookings cards go here</div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">Request cards go here</div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">My Product Cards go here</div>
      <div class="tab-pane fade" id="form" role="tabpanel" aria-labelledby="form-tab"><%= render 'shared/navbar' %></div>
    </div>
  </div>
</div>

